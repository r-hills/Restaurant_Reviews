<html>
<head>
    <link rel="stylesheet" href="../css/custom.css" type="text/css">
    <link rel="stylesheet" href="css/custom.css" type="text/css">
    <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Maven+Pro' rel='stylesheet' type='text/css'>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
</head>
<body>
    <div class="container">
        <div class="site-wrapper">
            <div class="site-wrapper-inner">
                <div class="cover-container">
                    <div class="masthead clearfix">
                        <div class="inner">
                            <h3 class="masthead-brand">&nbsp</h3>
                            <ul class="nav masthead-nav">
                                <p>&nbsp</p>
                                <p>&nbsp</p>
                                <p>&nbsp</p>
                            </ul>
                        </div>
                    </div>
                    <div class="inner cover">
                        <div class="main">
                            <h1 class="cover-heading header">Welcome to Restaurant Reviewer</h1>
                            <p class="lead">
                                <h2>Restaurants</h2>
                                <!-- Twig to display all restaurants and descriptions -->
                                {% if restaurants is not empty %}
                                <p>Here are all your restaurants:</p>
                                <ul>
                                    {% for restaurant in restaurants %}
                                    <li>{{ restaurant.getName }}</li>
                                    <li>{{ restaurant.getDescription }}</li>
                                    {% endfor %}
                                </ul>
                                {% endif %}
                                <form action="/restaurants" method="post">
                                    <label for="name">Restaurant Name</label>
                                    <input id="name" name="name" type="text">
                                    <button class="btn btn-default" type="submit">Add restaurant</button>
                                </form>
                                <form action="/delete_restaurants" method="post">
                                    <button class="btn btn-danger" type="submit">Clear</button>
                                </form>
                                <br/>
                                <a href="/"><button class="btn-default">Home</button></a>
                            </p>
                    </div>
                </div>
                <div class="mastfoot">
                    <div class="inner">
                        <!-- Validation -->
                        <p>&nbsp</p>
                        <p>&nbsp</p>
                        <p>&nbsp</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>
